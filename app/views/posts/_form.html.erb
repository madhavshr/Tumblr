<%= form_for @post do |f| %>
<div class="bg-danger">
   <% if @post.errors.any? %>
     <div id="errors">
     	<h2><%= pluralize(@post.errors.count, "error") %> Stopped This post from saving!!</h2>
     	<ul>
     		<% @post.errors.full_messages.each do |msg| %>
     		  <li><%= msg %></li>
     		  <% end %>
     	</ul>
     </div>
    <% end %>
</div>

<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :body %><br>
	<%= f.text_area :body %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>
